@model Intelly_Web.Entities.EmailEnt
@{
    ViewData["Title"] = "EmailMarketingManual";
}

<!DOCTYPE html>
<html lang="en">

<body>

    
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">
                <div class="page-title-box">
                    <div class="row align-items-center">
                        <div class="col-sm-6">
                            <h4 class="page-title">Campañas publicitarias</h4>
                        </div>

                        <!-- end row -->
                    </div>
                    <!-- end page-title -->

                    <div class="row">
                        <div class="col-12">
                            <!-- Left sidebar -->
                            <div class="email-leftbar card">
                                <a href="Campañas publicitarias" class="btn btn-danger rounded btn-custom btn-block waves-effect waves-light">Nuevo Correo</a>

                                <h6 class="m-t-30">Mi Correo</h6>

                                <div class="mail-list m-t-10">
                                    <a href="#" class="active"> Bandeja de Entrada <span class="float-right"></span> <i class="ti-archive mr-2"></i> </a>
                                    <a href="#"> Enviados <span class="float-right"></span><i class="ti-location-arrow mr-2"></i></a>
                                    <a href="#"> Favoritos<span class="float-right"></span><i class="ti-star mr-2"></i></a>
                                    <a href="#"> Borradores<span class="float-right"></span><i class="ti-pencil  mr-2"></i></a>
                                    <a href="#"> Spam <span class="float-right"></span><i class="ti-alert mr-2"></i></a>
                                    <a href="#"> Eliminados<span class="float-right"></span><i class="ti-trash mr-2"></i></a>
                                </div>

                                <h6 class="m-t-20">Etiquetas</h6>

                                <div class="mail-list m-t-10">
                                    <a href="#"><span class="mdi mdi-label-outline text-danger mr-2"></span>Proyectos</a>
                                    <a href="#"><span class="mdi mdi-label-outline text-info mr-2"></span>Clientes</a>
                                    <a href="#"><span class="mdi mdi-label-outline text-primary mr-2"></span>Empleados</a>
                                    <a href="#"><span class="mdi mdi-label-outline text-success mr-2"></span>Afiliados</a>
                                </div>

                            </div>
                            <!-- End Left sidebar -->
                            <!-- Right Sidebar -->
                            <div class="email-rightbar mb-3">
                            <div class="card w-75 m-0 auto">
                                <div class="card-body w-75 m-0 auto">
                                        <form>
                                            <div class="form-group">
                                                <input type="email" class="form-control" placeholder="Para">
                                            </div>

                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="Asunto">
                                            </div>

                                            <div class="form-group">
                                                <textarea class="form-control" rows="10" placeholder="Redacte su mensaje aquí"></textarea>
                                            </div>

                                            <div class="btn-toolbar form-group mb-0">
                                                <div class="">
                                                    <button type="button" class="btn btn-success waves-effect waves-light m-r-5"><i class="far fa-save"></i></button>
                                                    <button type="button" class="btn btn-danger waves-effect waves-light m-r-5"><i class="far fa-trash-alt"></i></button>
                                                    <button class="btn btn-primary waves-effect waves-light">
                                                        <span>Enviar</span>
                                                        <i class="fab fa-telegram-plane m-l-10"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- end Col-9 -->

                        </div>

                    </div>
                    <!-- End row -->

                    <!-- content -->


                </div>
                <!-- ============================================================== -->
                <!-- End Right content here -->
                <!-- ============================================================== -->

            </div>
        </div>
  



    <script>
        jQuery(document).ready(function () {

            $('.summernote').summernote({
                height: 250,                 // set editor height
                minHeight: null,             // set minimum height of editor
                maxHeight: null,             // set maximum height of editor
                focus: false                 // set focus to editable area after initializing summernote
            });
        });
    </script>
</body>

</html>

