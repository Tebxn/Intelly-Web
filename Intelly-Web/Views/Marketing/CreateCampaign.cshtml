@model Intelly_Web.Entities.MarketingCampaignEnt

@{
    ViewData["Title"] = "CreateCampaign";
}

    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="page-title-box">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <h4 class="page-title">Crear Campaña</h4>
                    </div>

                    <!-- end row -->
                </div>
                <!-- end page-title -->

                <div class="row">
                    <div class="col-12">
                        <!-- Left sidebar -->
                        <div class="email-leftbar card">
                            <a href="@Url.Action("EmailMarketing", "Marketing")" class="btn btn-secondary rounded btn-custom btn-block waves-effect waves-light">Ver Campañas</a>
                            <a href="@Url.Action("CreateCampaign", "Marketing")" class="btn btn-danger rounded btn-custom btn-block waves-effect waves-light">Crear campaña</a>
                            <a href="@Url.Action("SendEmailCampaign", "Marketing")" class="btn btn-secondary rounded btn-custom btn-block waves-effect waves-light">Enviar correo de Campaña</a>
                            <a href="@Url.Action("CampaignSuggestions", "Marketing")" class="btn btn-secondary rounded btn-custom btn-block waves-effect waves-light">Sugerencias de campañas</a>
                        </div>
                        <!-- End Left sidebar -->

                        <!-- Right Sidebar -->
                        <div class="table-rightbar mb-3">
                            <div class="card w-75 m-0 auto">
                                <div class="card-body w-100 m-0 auto">

                                <form asp-action="Login" asp-controller="Authentication" method="post" class="form-horizontal m-t-30">
                                    <p>Ingresa los datos para crear una nueva campaña</p>
                                    <div class="form-group">
                                        <div class="col-12">
                                            @ViewBag.MensajePantalla
                                            <br />
                                            <label>Codigo</label>
                                            <input class="form-control form-control-lg" type="text" placeholder="Correo" name="User_Email">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-12">
                                            <label>Nombre de campaña</label>
                                            <input class="form-control form-control-lg" type="text" placeholder="Nombre campaña" name="User_Password">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-12">
                                            <label>Nombre de campaña</label>
                                            <input class="form-control form-control-lg" type="text" placeholder="Contraseña" name="User_Password">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-12">
                                            <label>Fecha de Inicio</label>
                                            <input class="form-control form-control-lg" type="date" placeholder="Fecha Inicio" name="User_Password">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-12">
                                            <label>Fecha de Cierre</label>
                                            <input class="form-control form-control-lg" type="date" placeholder="Contraseña" name="User_Password">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-12">
                                            <label for="nivelCliente">Nivel de cliente</label>
                                            <select class="form-control form-control-lg" id="nivelCliente" name="nivelCliente">
                                                <option value="opcion1">Bronze</option>
                                                <option value="opcion2">Oro</option>
                                                <option value="opcion3">Platino</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group text-center m-t-20">
                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary btn-block btn-lg waves-effect waves-light">Iniciar Sesión</button>
                                        </div>
                                    </div>
                                </form>

                                </div>
                            </div>
                        </div>

                        <!-- end Col-9 -->

                    </div>

                </div>
                <!-- End row -->
                <!-- content -->


            </div>
            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->

        </div>
    </div>
