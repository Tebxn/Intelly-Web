@{
    ViewData["Title"] = "Crear nuevo Usuario";
}
<div class="wrapper-page">
    
    <div class="card card-pages shadow-none">

        <div class="card-body">
            
            <div class="text-center m-t-0 m-b-15">
                <a href="index.html" class="logo logo-admin"><img src="assets/images/logo-dark.png" alt="" height="24"></a>
            </div>
            <h5 class="font-18 text-center">Agregar nuevo usuario</h5>

            <form class="form-horizontal m-t-30" action="index.html">

                <div class="form-group">
                    <div class="col-12">
                        <label>Correo Electrónico</label>
                        <input class="form-control" type="text" required="" placeholder="Correo Electrónico">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-12">
                        <label>Cédula o pasaporte</label>
                        <input class="form-control" type="text" required="" placeholder="Cédula o pasaporte">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-12">
                        <label>Nombre</label>
                        <input class="form-control" type="text" required="" placeholder="Nombre completo">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-12">
                        <label>Permisos</label>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Seleccionar Opción
                            </button>
                            <!-- Contenido del menú desplegable -->
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Usuario</a>
                                <a class="dropdown-item" href="#">Administrador</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center m-t-20">
                    <div class="col-12">
                        <button class="btn btn-primary btn-block btn-lg waves-effect waves-light" type="submit">Crear Usuario</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
