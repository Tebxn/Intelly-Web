@model Intelly_Web.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- Start content -->
<div class="content">
    <div class="container-fluid">
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <h4 class="page-title">Dashboard</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Intelly</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end page-title -->

        <div class="row">

            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-heading p-4">
                        <div class="mini-stat-icon float-right">
                            <i class="mdi mdi-cube-outline bg-primary  text-white"></i>
                        </div>
                        <div>
                            <h5 class="font-16">Usuarios Nuevos Mensuales</h5>
                        </div>
                        <h3 class="mt-4">@Model.NewCustomersMonth</h3>
                        <div class="progress mt-4" style="height: 4px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-heading p-4">
                        <div class="mini-stat-icon float-right">
                            <i class="mdi mdi-briefcase-check bg-success text-white"></i>
                        </div>
                        <div>
                            <h5 class="font-16">Ventas con promoción Mensuales</h5>
                        </div>
                        <h3 class="mt-4">@Model.SellsWithCampaign</h3>
                        <div class="progress mt-4" style="height: 4px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-heading p-4">
                        <div class="mini-stat-icon float-right">
                            <i class="mdi mdi-tag-text-outline bg-warning text-white"></i>
                        </div>
                        <div>
                            <h5 class="font-16">Promociones con estado Activo</h5>
                        </div>
                        <h3 class="mt-4">@Model.ActiveMarketingCampaigns</h3>
                        <div class="progress mt-4" style="height: 4px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-xl-3">
                <div class="card">
                    <div class="card-heading p-4">
                        <div class="mini-stat-icon float-right">
                            <i class="mdi mdi-buffer bg-danger text-white"></i>
                        </div>
                        <div>
                            <h5 class="font-16">Correos promocionales enviados (mes)</h5>
                        </div>
                        <h3 class="mt-4">@Model.EmailsSendedMonth</h3>
                        <div class="progress mt-4" style="height: 4px;">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-xl-8">
                <div class="card m-b-30">
                    <div class="card-body">

                        <h4 class="mt-0 header-title mb-4">Ventas Anuales</h4>

                        <div id="ventas-chart" class="morris-charts morris-chart-height"></div>

                        <script>
                            $(document).ready(function () {
                                var ventasData = @Html.Raw(Json.Serialize(Model.SumTotalByMonthActualYear));

                                Morris.Line({
                                    element: 'ventas-chart',
                                    data: ventasData.map(function (value, index) {
                                        return { month: index + 1, total: value };
                                    }),
                                    xkey: 'month',
                                    ykeys: ['total'],
                                    labels: ['Ventas'],
                                    barColors: ['#3498db'],
                                    xLabelAngle: 60,
                                    hideHover: 'auto'
                                });
                            });
                        </script>


                    </div>
                </div>
            </div>
            <!-- end col -->

            <div class="col-xl-4">
                <div class="card m-b-30">
                    <div class="card-body">
                        <h4 class="mt-0 header-title mb-4">Top 3 promociones</h4>

                        <div id="donut-topCampaigns" class="morris-charts morris-chart-height"></div>
                        <script>
                            var names = @Html.Raw(Json.Serialize(Model.TopCampaigns));
                            var totals = @Html.Raw(Json.Serialize(Model.TopCampaignsSells));

                            $(document).ready(function () {
                                var data = [];

                                for (var i = 0; i < names.length; i++) {
                                    data.push({ label: names[i], value: totals[i] });
                                }

                                Morris.Donut({
                                    element: 'donut-topCampaigns',
                                    data: data,
                                    colors: ['#3498db', '#2ecc71', '#e74c3c'],
                                    formatter: function (y) {
                                        return y;
                                    }
                                });
                            });
                        </script>

                    </div>
                </div>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
</div>
<!-- container-fluid -->
